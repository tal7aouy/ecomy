{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<section>
		<div class="w-full lg:w-4/12 px-4 mx-auto pt-6">
			<div class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-gray-200 border-0">
				<div class="rounded-t mb-0 px-6 py-6">
					<div class="text-center mb-3">
						<h6 class="text-gray-500 text-sm font-bold">
							Sign in
						</h6>
<a href="{{path('register')}}" class="text-indigo-500 font-medium text-sm hover:text-indigo-600 duration-200 transition-all">Create a new account?</a>

					</div>

				</div>
				<div class="flex-auto px-4 lg:px-10 py-10 pt-0">

					<form method="post">
						{% if error %}
							<div class="mb-4 rounded-lg bg-red-200 px-6 py-5 text-normal text-red-700">{{ error.messageKey|trans(error.messageData, 'security') }}</div>

						{% endif %}
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<div class="relative w-full mb-3">
							<label class="block uppercase text-gray-600 text-xs font-bold mb-2" for="email">Email</label>

							<input type="email" value="{{ last_username }}" name="email" id="email" autocomplete="email" required autofocus class="border-0 px-3 py-3 placeholder-gray-300 text-gray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150">

						</div>
						<div class="relative w-full mb-3">
							<label class="block uppercase text-gray-600 text-xs font-bold mb-2" for="password">Password</label>

							<input type="password" name="password" id="password" autocomplete="current-password" required class="border-0 px-3 py-3 placeholder-gray-300 text-gray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150">

						</div>
						<div>
							<label class="inline-flex items-center cursor-pointer"><input type="checkbox" name="_remember_me" class="form-checkbox border-0 rounded text-gray-700 ml-1 w-5 h-5 ease-linear transition-all duration-150"><span class="ml-2 text-sm font-semibold text-gray-600">Remember me</span>

							</label>
						</div>
						<div class="text-center mt-6">
							<button class="bg-gray-800 text-white active:bg-gray-600 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full ease-linear transition-all duration-150" type="submit">
								Sign In
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
